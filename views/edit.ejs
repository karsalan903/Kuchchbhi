<%- include ('./partials/header.ejs') %>
    <div class="container p-3">
      <h1>Edit account info.</h1>
      <hr>
      <form class="mt-3" action="/update" method="post">
        <div class="mb-3">
          <label for="exampleInputPassword1" class="form-label">Name</label>
          <input name="username" type="text" class="form-control" id="exampleInputPassword1" value="<%= loggedInUser.username %>">
        </div>
        <div class="mb-3">
          <label for="exampleInputPassword1" class="form-label">Photo</label>
          <input name="photo" type="text" class="form-control" id="exampleInputPassword1" value="<%= loggedInUser.photo %>">
        </div>
        <button type="submit" class="btn btn-warning" >Update info</button>
      </form>
    </div>
<%- include ('./partials/footer.ejs') %>