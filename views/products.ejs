<%- include ('./partials/header.ejs') %>
    <div class="container p-3">
        <h1>Products</h1>
        <hr>
        <div class="d-flex align-items-start" style="gap: 40px;">
          <% products.forEach(function(elem){ %>
            <div class="card" style="width: 18rem;">
              <div class="card-body">
                <h5 class="card-title"><%= elem.name %></h5>
                <h6>Sold by: <%= elem.userid.username %></h6>
                <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                <% if(loggedInUser.cart.indexOf(elem._id) !== -1){ %>
                  <small style="color: green; font-weight: 500; ;">Already in your cart</small>
                  <br>
                  <br>
                <% } %>
                <% if(elem.userid.id === loggedInUser.id){ %>
                  <a href="/edit" class="btn btn-warning"><i class="ri-edit-2-fill"></i></i>Edit</a>
                  <a href="/delete" class="btn btn-danger"><i class="ri-delete-bin-2-fill"></i>Delete</a>
                <% } else { %>
                  <% if(loggedInUser.cart.indexOf(elem.id) !== -1){ %>
                    <a class="btn btn-danger" href="/remove/cart/<%= elem._id %>">Remove from cart</a>
                  <% } else { %>
                    <a class="btn btn-primary" href="/cart/<%= elem._id %>">Buy Now</a>
                  <% } %>
                <% } %>
              </div>
            </div>
          <% }) %>
        </div>
    </div>
<%- include ('./partials/footer.ejs') %>